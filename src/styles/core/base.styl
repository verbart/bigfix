*
  box-sizing border-box
  font-family inherit

:focus
  outline none

::-moz-focus-inner
  border none

::placeholder
  color #fff

html, body, ui-view
  min-height 100%
  height 100%

html
  font 300 16px/1.5 'Open Sans', 'Helvetica', 'Arial', sans-serif

body
  margin 0
  padding 0

img
  max-width 100%
  vertical-align bottom

a
  color inherit
  cursor default
  &[href]
    cursor pointer

p
  margin-top .5rem
  margin-bottom .5rem

ul
  margin 0
  padding 0
  list-style-position inside

table
  border-spacing 0
  border-collapse collapse

textarea
  resize none

address
  font-style normal

h1, h2, h3, h4
  margin-top 0
  margin-bottom 0
  line-height 1
  font-weight inherit

h1
  margin-top .5rem
  margin-bottom .85rem
  font-size 2rem

h2
  margin-top .4rem
  margin-bottom .8rem
  font-size 1.65rem

h3
  margin-top .3rem
  margin-bottom .7rem
  font-size 1.3rem

h4
  margin-top .2rem
  margin-bottom .5rem
  font-size 1.1rem
