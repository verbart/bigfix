.button
  position relative
  display inline-block
  padding .54rem 1rem
  line-height 1
  font-size 1.1rem
  border 1px solid color_red
  background color_red
  color white
  font-weight 300
  text-align center
  cursor pointer
  text-decoration none
  transition .4s
  &:hover
    background color_red_dark
  &_lg
    padding .6rem 1.25rem
    font-size 1.15rem
  &_block
    width 100%
