.button
  position relative
  display inline-block
  padding .3rem 1rem
  font-size 1rem
  border 1px solid transparent
  background color_red
  color white
  font-weight 300
  text-align center
  cursor pointer
  text-decoration none
  transition .4s
  &:hover
    background color_red_dark
  &_lg
    padding .35rem 1.25rem
    font-size 1.1rem
  &_block
    width 100%
