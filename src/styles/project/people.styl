.people
  padding-top 15px
  padding-bottom 15px
  &__container
    display flex
    justify-content space-around
    flex-wrap wrap
    @media (max-width 768px)
      display block
  &__photo
    width 240px
    height @width
    background-size cover
    background-position center
    @media (max-width 1200px)
      width 200px
      height @width
    @media (max-width 992px)
      width 200px
      height @width
    @media (max-width 768px)
      width auto
      height auto
      padding-bottom 100%
