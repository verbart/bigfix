.address
  &__item
    position relative
    padding-left 3.5rem
    @media (max-width 992px)
      padding-left 0
    &_location
      &:before
        sprite($location)
    &_phone
      &:before
        sprite($phone-call)
    &_email
      &:before
        sprite($mail)
    &:before
      position absolute
      top 0
      left 0
      @media (max-width 992px)
        display none
